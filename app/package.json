{
  "name": "interface",
  "productName": "Hyppo-XD-Mac",
  "version": "1.0.1",
  "description": "Hypotheses extraction tool using visualization",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "rebuild": "electron-rebuild -f -w interface",
    "package-mac": "electron-packager ./ Hyppo-XD-Mac --overwrite --platform=darwin --arch=x64 --icon=logo/icon.icns --prune=true --out=release-builds --ignore=\\.gitignore --ignore=\\.gitmodules",
    "package-win": "electron-packager ./ Hyppo-XD-Windows --overwrite --platform=win32 --arch=ia32 --icon=logo/icon.ico --prune=true --out=release-builds --ignore=\\.gitignore --ignore=\\.gitmodules --version-string.FileDescription=CE --version-string.ProductName=\"Hyppo-XD-Windows\"",
    "package-linux": "electron-packager ./ Hyppo-XD-Linux --overwrite --platform=linux --arch=armv7l --icon=logo/1024x1024.png --prune=true --out=release-builds --ignore=\\.gitignore --ignore=\\.gitmodules",
    "installer-mac": "electron-installer-dmg --icon=./logo/icon.icns --overwrite ./release-builds/Hyppo-XD-Mac-darwin-x64/Hyppo-XD-Mac.app ./release/Hyppo-XD-Mac",
    "installer-win": "node installers/windows/createinstaller.js",
    "installer-linux": "electron-installer-debian --src release-builds/Hyppo-XD-linux-x64/ --arch amd64 --config debian.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xperthut/Hyppo-XD.git"
  },
  "author": "Methun",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/xperthut/Hyppo-XD/issues"
  },
  "homepage": "https://github.com/xperthut/Hyppo-XD#readme",
  "dependencies": {
    "bindings": "^1.5.0",
    "electron-log": "^3.0.9",
    "jquery": "^3.4.1",
    "nan": "^2.14.0"
  },
  "devDependencies": {
    "asar": "^2.0.1",
    "electron": "^6.1.4",
    "electron-installer-debian": "^2.0.1",
    "electron-installer-dmg": "^3.0.0",
    "electron-packager": "^14.1.0",
    "electron-rebuild": "^1.8.8",
    "electron-winstaller": "^4.0.0",
    "rebuild": "^0.1.2"
  },
  "gypfile": true
}
